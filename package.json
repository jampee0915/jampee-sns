{
  "name": "jampee-sns",
  "description": "TwitterのようなSNSアプリケーション",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter=@jampee-sns/backend-app dev\" \"pnpm --filter=@jampee-sns/frontend-app dev\"",
    "dev:backend": "pnpm --filter=@jampee-sns/backend-app dev",
    "dev:frontend": "pnpm --filter=@jampee-sns/frontend-app dev",
    "build": "pnpm -r run build",
    "type:check": "pnpm -r run type:check",
    "lint:check": "pnpm -r run lint:check",
    "lint:fix": "pnpm -r run lint:fix",
    "format:check": "pnpm -r run format:check",
    "format:fix": "pnpm -r run format:fix",
    "test": "pnpm -r run test"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "typescript": "^5.4.0"
  },
  "author": "jampee0915",
  "license": "MIT"
}